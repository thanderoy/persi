{
    "manifest_version": 2,
    "name": "Persi Extension",
    "version": "0.0.1",

    "description": "Allows for a persistent fullscreen mode on alternative streaming media players.",

    "icons": {
        "48": "icons/border-48.png",
        "64": "icons/border-64.png"
    },

    "permissions": ["activeTab", "scripting"],

    "background": {
		"scripts": [
			"app.js"
		]
	},
}
